<!DOCTYPE html>
<html>
  <head>
    <title>Anticasts</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>
  <body>
    <%= render "layouts/navbars/main_bar" %>
    <div class="container push-down">
      <% if notice %>
        <p class="notice alert alert-success"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
      <%= yield %>

      <!-- FOOTER -->
      <footer>
        <!-- <p class="float-xs-right"><a href="#">Back to top</a></p> -->
        <p>&copy; 2016 Anticasts, LLC &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
      </footer>
    </div>
    <%= yield :javascript %>
  </body>
</html>
